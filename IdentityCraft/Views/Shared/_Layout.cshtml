<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewData["Title"] - Inance</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css" asp-append-version="true" />
    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />

    <!-- Page Specific Styles -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="hero_area">
        <!-- Header Section -->
        <header class="header_section">
            <div class="header_top">
                <div class="container-fluid">
                    <div class="contact_nav">
                        <a href="tel:+201007556395">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>Call: +201007556395</span>
                        </a>
                        <a href="mailto:hadynazmy114@gmail.com">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>Email: hadynazmy114@gmail.com</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                            <span>Inance</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class=""> </span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Service", "Home")">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ContactUs", "Home")">Contact Us</a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">Manage Roles</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">Manage Users</a>
                                    </li>
                                }
                            </ul>
                            <partial name="_LoginPartial" />
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>
    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Footer Section -->
    <section class="info_section">
        <div class="container">
            <h4>Get In Touch</h4>
            <div class="row d-flex justify-content-around">
                <div class="col-md-3">
                    <a href="#">
                        <div class="item">
                            <div class="img-box">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                            </div>
                            <p>Lorem Ipsum is simply dummy text</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="https://web.whatsapp.com/">
                        <div class="item">
                            <div class="img-box">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                            </div>
                            <p>+20 1007556395</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="https://mail.google.com/mail/u/1/?hl=ar#inbox">
                        <div class="item">
                            <div class="img-box">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </div>
                            <p>hadynazmy114@gmail.com</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="social-box">
            <h4>Follow Us</h4>
            <div class="box">
                <a href="https://www.facebook.com/hady.nazmy.5"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="https://x.com/itshadynazmy"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-youtube" aria-hidden="true"></i></a>
                <a href="https://www.instagram.com/hadynazmy/"><i class="fa fa-instagram" aria-hidden="true"></i></a>
            </div>
        </div>
    </section>
    <!-- Footer -->
    <footer class="footer_section">
        <div class="container">
            <p>
                &copy; <span id="displayDateYear"></span> All Rights Reserved By
                <a href="https://www.instagram.com/hadynazmy/">Hady</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Google Maps -->
    <script>
        function myMap() {
            var mapProp = {
                center: new google.maps.LatLng(40.7128, -74.0060), // مثال على الإحداثيات
                zoom: 10,
            };
            var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap" async defer></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
